colorscheme wombat

syntax on

set number

set tabstop=2
set shiftwidth=2
set expandtab

set backspace=indent,eol,start
set showmode                   
set gcr=a:blinkon0

set noswapfile
set nobackup
set nowb

set autoindent
set smartindent
set smarttab

filetype plugin on
filetype indent on

set nowrap
set linebreak

set scrolloff=8
set sidescrolloff=15
set sidescroll=1
